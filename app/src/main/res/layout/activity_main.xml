<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/numberText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" android:textSize="100sp" android:fontFamily="sans-serif-black"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="414dp"
            android:layout_height="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:text="◯"
                android:layout_width="match_parent"
                android:layout_height="96dp" android:id="@+id/changeButton"
                android:layout_marginBottom="200dp" android:layout_marginRight="1dp" android:layout_marginEnd="1dp"
                android:textSize="64sp" app:backgroundTint="#FF0000" android:onClick="maru" android:layout_weight="1"/>
        <Button
                android:text="×"
                android:layout_width="match_parent"
                android:layout_height="96dp" android:id="@+id/batsuButton"
                android:layout_marginBottom="200dp" android:layout_marginRight="1dp" android:layout_marginEnd="1dp"
                android:textSize="64sp" app:backgroundTint="#0000FF" android:onClick="batsu" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>